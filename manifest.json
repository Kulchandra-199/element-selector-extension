{
    "manifest_version": 3,
    "name": "Element Highlighter",
    "version": "1.0",
    "description": "Highlight elements and show their class names",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "hello.html"
      
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
  }